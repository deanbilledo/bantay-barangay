# Server Configuration
NODE_ENV=development
PORT=5000

# Database - Local MongoDB (install MongoDB or use Atlas)
MONGODB_URI=mongodb:/

# JWT Configuration
JWT_SECRET=bantay-barangay-super-secret-jwt-key-development-only
JWT_EXPIRE=30d

# Client URL (for CORS)
CLIENT_URL=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# SMS Configuration (Semaphore API - Development)
SMS_API_KEY=demo-key-replace-with-real-key
SMS_SENDER_NAME=BantayBarangay

# Email Configuration (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=demo@bantaybarangay.com
EMAIL_PASS=demo-password

# Push Notification Configuration
VAPID_PUBLIC_KEY=demo-vapid-public-key
VAPID_PRIVATE_KEY=demo-vapid-private-key

# Security
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Development Tools
ENABLE_CORS=true
ENABLE_LOGGING=true
